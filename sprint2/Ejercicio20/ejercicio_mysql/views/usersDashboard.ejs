<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Bootstrap demo</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous" />
  </head>
  <body>
    <div class="m-4 container">
      <div class="row">
        <h2 class="m-3 col-6">List of Users:</h2>
        <a href="/users/create" class="btn btn-success ms-auto col-auto my-4">New</a>
      </div>
      <table class="table">
        <thead>
          <tr>
            <th scope="col">ID</th>
            <th scope="col">Name</th>
            <th scope="col">LastName</th>
            <th scope="col">Age</th>
            <th class="w-25" scope="col">Actions</th>
          </tr>
        </thead>
        <tbody id="tbody">
          <% for(const user of results) { %>
          <!-- prettier-ignore -->
          <tr> 
          <td><%= user.id%></td>
          <td><%= user.firstname%></td>
          <td><%= user.lastname %></td>
          <td><%= user.age %></td>
          <td> <a href="users/edit/<%=user.id%>" class="btn btn-success">Editar</a> 
               <a href="users/delete/<%=user.id%>" class="btn btn-danger">Eliminar</a>
        </td>
        </tr>

          <!-- prettier-ignore -->
          <%} %>
        </tbody>
        <!-- prettier-ignore -->
      </table>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js" integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN" crossorigin="anonymous"></script>
  </body>
</html>
