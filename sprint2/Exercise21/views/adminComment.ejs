<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD"
      crossorigin="anonymous"
    />
  </head>
  <body>
    <div class="container">
      <div class="container d-flex justify-content-between p-3">
        <h2>Listado de Comentarios</h2>
        <a class="btn btn-danger" href="/">Volver al Home</a>
        <a class="btn btn-success" href="/panel/articulos">Articulos</a>
        <a class="btn btn-success" href="/panel/usuarios">Usuarios</a>
      </div>
      <div class="row">
        <table class="table table-striped table-bordered">
          <thead>
            <tr>
              <th scope="col">ID</th>
              <th scope="col">Content</th>
              <th scope="col">Autor</th>
              <th scope="col">Art√≠culo</th>
            </tr>
          </thead>
          <tbody>
            <% for(comment of comments) {%>
            <tr>
              <th scope="row"><%= comment.id %></th>
              <td><%= comment.content %></td>
              <td><%= comment.user.firstname %> <%= comment.user.lastname %></td>
              <td>
                <a class="text-decoration-none text-dark" href="/articulo/<%= comment.article.id %>"
                  ><%= comment.article.id %>
                </a>
              </td>
              <td>
                <a class="pe-1" href="/panel/editar/comentario/<%= comment.id %>"
                  ><button class="btn btn-primary">Editar</button></a
                ><a class="pe-1" href="/comentarios/destroy/<%= comment.id %>"
                  ><button class="btn btn-danger">Eliminar</button></a
                >
              </td>
            </tr>
            <% } %>
          </tbody>
        </table>
      </div>
    </div>
  </body>
</html>
